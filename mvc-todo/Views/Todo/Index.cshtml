@model IEnumerable<Todo>
@{
    ViewData["Title"] = "Home Page";
    Todo newTodo = new Todo();
}

<div class="flex justify-center mt-5">
    <h1 class="text-[52px]">Todo List</h1>
</div>

<partial name="_CreatePartial" model="new Todo()"/>

<div class="mt-4">
        @foreach (Todo todo in Model)
        {
        <div class="bg-[#253d73] flex justify-between mb-3">
                <div class="p-4 text-[20px] rounded">@todo.Title</div>
                <button data-modal-target="popup-modal" data-modal-toggle="popup-modal" class="p-4 hover:bg-white hover:bg-opacity-10"><img src="icons/trash-can.png" class="size-6" /></button>
        </div>
        <partial name="_DeletePartial" model="@todo" />
    }
    </div>
</div>


<div class="d-flex flex-column align-items-center mt-4 hidden">
    <input class="bg-[#2a2649] border-0 outline-0 p-3 rounded w-full text-[18px] text-gray-200 placeholder-opacity-50 font-segoe" type="text" placeholder="Search todos...">
</div>